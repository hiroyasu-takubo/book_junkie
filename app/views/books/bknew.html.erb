<% provide(:title, "本の登録") %>
<h1>本の登録</h1>

<%= form_for :book , url:new_book_path html: {class: 'form-horizontal'}  do |f| %>

  <div class="form-group">
    <div class="col-md-2">
      <%= f.label :keyword %>
    </div>
    <div class="col-md-6">
      <%= f.text_field :keyword, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-2">
      <%= f.submit "検索", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
