<% provide(:title, "本の検索結果") %>
<h1>本の検索結果</h1>

<div class="row">
  <ul class="users">
    <% @books.each do |book| %>
      <li>
        <div class="col-md-4">
          <img src=<%= book.image %> />
        </div>
        <div class="col-md-8">
          
          <!-- <p>タイトル：<%= book.title %></p> -->
          <%= link_to book.title, book_path(book) %>
          <link>
          <p>著者：<%= book.author %></p>
          <p>出版社：<%= book.publisher %></p>
        </div>
      </li>
    <% end %>
  </ul>
</div>
