<% provide(:title, "本の検索") %>
<h1>本の検索</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:book, url: booklist_path) do |f| %>

      <%= f.label :keyword %>
      <%= f.text_field :keyword, class: 'form-control' %>

      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
