<% provide(:title, "本詳細情報") %>
<h1>本詳細情報</h1>

<div class="row">
  <div class="col-md-4">
    <img src=<%= @book.image %> />
  </div>
  <div class="col-md-8">
    <p>タイトル：<%= @book.title %></p>
    <p>著者：<%= @book.author %></p>
    <p>出版社：<%= @book.publisher %></p>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <% @booktags.each do |booktag| %>
      <p><%= booktag.id%></p>
    <% end %>
  </div>
</div>
