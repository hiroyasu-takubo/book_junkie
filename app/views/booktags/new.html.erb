<% provide(:title, 'タグの作成') %>
<h1>タグの作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@booktag) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.hidden_field :user_id, value: current_user %>
      
      <%= f.label :tag_name %>
      <%= f.text_field :tag_name, class: 'form-control' %>

      <%= f.submit "本棚作成", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
