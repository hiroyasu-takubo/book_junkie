<% provide(:title, "本の検索結果") %>
<h1>本の検索結果</h1>

<div class="row">
  <ul class="users">
    <% @search_items.each do |search_item| %>
      <li>
        <div class="col-md-4">
          <img src=<%= search_item.image %> />
        </div>
        <div class="col-md-8">
          
          <!-- <p>タイトル：<%= search_item.title %></p> -->
          <%= link_to search_item.title, search_path(search_item) %>
          <link>
          <p>著者：<%= search_item.author %></p>
          <p>出版社：<%= search_item.publisher %></p>
        </div>
      </li>
    <% end %>
  </ul>
</div>
