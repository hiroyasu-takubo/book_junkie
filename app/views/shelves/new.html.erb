<% provide(:title, '本棚の作成') %>
<h1>本棚の作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@shelf) do |f| %>
      <!-- <%= render 'shared/error_messages' %> -->

      <%= f.hidden_field :user_id, value: current_user %>
      
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit "本棚作成", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
