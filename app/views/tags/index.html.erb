<% provide(:title, 'すべてのタグ') %>
<h1>タグ一覧</h1>

<div class="row">
  <ul class="tags">
    <% @tags.each do |tag| %>
      <li>
        <%= tag.name %>

        <%= link_to "削除", tag, method: :delete, data: { confirm: "削除をしますか？" }  %>
        <%= link_to "編集", edit_tag_path(tag.id) %>
      </li>
    <% end %>
  </ul>
</div>
